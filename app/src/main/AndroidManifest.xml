<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.habitree.xueshu">

    <application
        android:name=".xs.BaseApp"
        android:allowBackup="true"
        android:icon="@drawable/logo_denglv"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.activity.LoginActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".login.activity.RegisterActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity android:name=".login.activity.SendAuthCodeActivity" />
        <activity android:name=".login.activity.SetPasswordActivity" />
        <activity android:name=".punchcard.activity.HabitDetailActivity" />
        <activity android:name=".punchcard.activity.PlantTreeActivity" />
        <activity android:name=".punchcard.activity.HabitSettingActivity" />
        <activity android:name=".punchcard.activity.RepeatDayActivity" />
        <activity android:name=".punchcard.activity.SupervisionSettingActivity" />
        <activity android:name=".punchcard.activity.ChooseSupervisorActivity"></activity>
    </application>

</manifest>