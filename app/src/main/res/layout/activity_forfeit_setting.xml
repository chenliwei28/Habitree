<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.habitree.xueshu.punchcard.activity.ForfeitSettingActivity">

    <com.habitree.xueshu.xs.view.MyActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        app:title_text="@string/penalty_settings" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.habitree.xueshu.xs.view.CustomRadioGroup
            android:id="@+id/num_crg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/one"
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_time_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/one_yuan"
                    android:textColor="@drawable/selector_radio_button_text"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/five"
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_time_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/five_yuan"
                    android:textColor="@drawable/selector_radio_button_text"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/ten"
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_time_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/ten_yuan"
                    android:textColor="@drawable/selector_radio_button_text"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/fifteen"
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_time_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/fifteen_yuan"
                    android:textColor="@drawable/selector_radio_button_text"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/twenty"
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_time_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/twenty_yuan"
                    android:textColor="@drawable/selector_radio_button_text"
                    android:textSize="18sp" />

                <RadioButton
                    android:id="@+id/fifty"
                    android:layout_width="0dp"
                    android:layout_height="76dp"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_time_radio_button"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/fifty_yuan"
                    android:textColor="@drawable/selector_radio_button_text"
                    android:textSize="18sp" />
            </LinearLayout>
        </com.habitree.xueshu.xs.view.CustomRadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/ic_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_sum"
                android:textColor="@color/black_text"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/sum_et"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="end|center_vertical"
                android:inputType="number"
                android:maxLength="5"
                android:maxLines="1"
                android:textColor="@color/black_text"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:text="@string/yuan_every_time"
                android:textColor="@color/gray_text"
                android:textSize="15sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/note_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="10dp"
            android:text="@string/forfeit_setting_long_text"
            android:textColor="@color/gray_text" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/num_tv"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@color/gray"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="@string/summation_money"/>

        <TextView
            android:id="@+id/pay_tv"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:background="@color/orange"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:text="@string/pay_right_now"/>
    </LinearLayout>
</LinearLayout>
