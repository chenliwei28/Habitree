<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.habitree.xueshu.mine.activity.AboutActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_about_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:minHeight="200dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/padding_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="100dp"
                android:text="学树习惯"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>


    </FrameLayout>

    <TextView
        android:id="@+id/commit_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="12dp"
        android:text="去评论"
        android:textColor="@color/black_text"
        android:textSize="18sp" />

    <TextView style="@style/Line" />

    <LinearLayout
        android:id="@+id/contact_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="50dp"
            android:paddingLeft="12dp"
            android:text="联系我们"
            android:textColor="@color/black_text"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/arrow_iv"
            android:layout_width="15dp"
            android:layout_height="9dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/ic_arrow_up" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/contant_detail_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="30dp"
            android:text="公众号："
            android:textColor="@color/gray_text"
            android:textSize="14sp" />

        <TextView style="@style/Line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="30dp"
            android:text="微博："
            android:textColor="@color/gray_text"
            android:textSize="14sp" />

        <TextView style="@style/Line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="30dp"
            android:text="邮箱："
            android:textColor="@color/gray_text"
            android:textSize="14sp" />

        <TextView style="@style/Line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="30dp"
            android:text="Q群："
            android:textColor="@color/gray_text"
            android:textSize="14sp" />

        <TextView style="@style/Line" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="30dp"
            android:text="官网：http://www.habitree.cn/"
            android:textColor="@color/gray_text"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView style="@style/Line" />

    <com.habitree.xueshu.xs.view.CustomItemView
        android:id="@+id/protocol_item"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:detail_visible="false"
        app:head_img_visible="false"
        app:next_visible="true"
        app:title="使用协议" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="Copyright©2017-2022"
        android:textColor="@color/gray_text"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:text="厦门学树网络科技有限公司"
        android:textColor="@color/gray_text"
        android:textSize="16sp" />
</LinearLayout>
