<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.habitree.xueshu.message.activity.MyFriendsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_rect_round_corner_stroke_white_bg"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/search_et"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginRight="@dimen/_12dp"
            android:background="@color/white"
            android:hint="@string/search_friends"
            android:inputType="text"
            android:labelFor="@+id/search_et"
            android:maxLines="1"
            android:textColor="@color/black_text"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_15sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/friends_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
