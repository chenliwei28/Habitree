<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mid"
    tools:context="com.habitree.xueshu.mine.fragment.MidTreeFragment">

    <ImageView
        android:id="@+id/tree_one"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:layout_marginLeft="120dp"
        android:src="@drawable/tree_mid1"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/tree_two"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="130dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/tree_mid2"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/tree_three"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="270dp"
        android:src="@drawable/tree_mid3"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/tree_four"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/tree_mid4"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/title_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="260dp"
        android:layout_marginLeft="110dp"
        android:background="@drawable/shape_rect_round_corner_green_bg"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="夜跑啪啪啪啪啪"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/title_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="220dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_rect_round_corner_green_bg"
        android:ellipsize="end"
        android:maxLength="6"
        android:maxLines="1"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="夜跑啪啪啪啪啪啪哈哈哈"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/title_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="250dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/shape_rect_round_corner_green_bg"
        android:ellipsize="end"
        android:maxLength="6"
        android:maxLines="1"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="夜跑啪啪啪啪啪"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/title_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_marginTop="350dp"
        android:background="@drawable/shape_rect_round_corner_green_bg"
        android:ellipsize="end"
        android:maxLength="6"
        android:maxLines="1"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:text="夜跑啪啪啪啪啪"
        android:visibility="gone"
        tools:visibility="visible"/>
</RelativeLayout>
