<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mid"
    tools:context="com.habitree.xueshu.mine.fragment.MidTreeFragment">

    <com.habitree.xueshu.xs.view.TreeView
        android:id="@+id/tree_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tree_height="160dp"
        app:tree_width="180dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/tree_mid1"
        android:visibility="gone"
        tools:visibility="visible"/>

    <com.habitree.xueshu.xs.view.TreeView
        android:id="@+id/tree_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tree_height="80dp"
        app:tree_width="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="30dp"
        android:src="@drawable/tree_mid2"
        android:visibility="gone"
        tools:visibility="visible"/>

    <com.habitree.xueshu.xs.view.TreeView
        android:id="@+id/tree_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="60dp"
        android:layout_marginTop="280dp"
        android:src="@drawable/tree_mid3"
        android:visibility="gone"
        tools:visibility="visible"
        app:tree_height="70dp"
        app:tree_width="60dp"/>

    <com.habitree.xueshu.xs.view.TreeView
        android:id="@+id/tree_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tree_height="90dp"
        app:tree_width="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/tree_mid4"
        android:visibility="gone"
        tools:visibility="visible"/>


</RelativeLayout>
