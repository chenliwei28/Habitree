<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100dp"
    android:background="@drawable/shape_round_corner_white_button"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <com.habitree.xueshu.xs.view.RoundImageView
        android:id="@+id/head_riv"
        android:layout_width="@dimen/_75dp"
        android:layout_height="@dimen/_75dp"
        android:layout_marginLeft="@dimen/_15dp"
        android:layout_marginRight="@dimen/_15dp"
        android:src="@drawable/ic_launcher"
        app:type="circle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15dp"
            android:layout_toRightOf="@id/head_riv"
            android:textColor="@color/black_text"
            android:textSize="@dimen/_20sp" />

        <TextView
            android:id="@+id/days_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_tv"
            android:layout_marginBottom="@dimen/_12dp"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_toRightOf="@id/head_riv"
            android:textColor="@color/black_text"
            android:textSize="@dimen/_14sp" />
    </LinearLayout>


</LinearLayout>