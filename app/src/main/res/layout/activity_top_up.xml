<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.habitree.xueshu.mine.activity.TopUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="vertical"
        android:padding="@dimen/_12dp"
        android:layout_marginTop="@dimen/_12dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/top_up_num"
            android:textSize="@dimen/_14sp"
            android:textColor="@color/gray_text"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rmb"
                android:textSize="@dimen/_30sp"
                android:textColor="@color/black_text"/>

            <EditText
                android:id="@+id/num_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_8dp"
                android:background="@color/white"
                android:textSize="@dimen/_36sp"
                android:textColor="@color/black_text"
                android:inputType="numberDecimal" />
        </LinearLayout>
    </LinearLayout>

    <View style="@style/Line"/>

    <LinearLayout
        android:id="@+id/wx_check_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60dp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_20dp"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginRight="@dimen/_12dp"
            android:src="@drawable/ic_wx_big" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wx_pay"
                android:textSize="@dimen/_16sp"
                android:textColor="@color/black_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wx_pay_long_text"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/gray_text"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/wx_check_iv"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_24dp"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginRight="@dimen/_12dp"
            android:src="@drawable/selector_pay_check_box"/>
    </LinearLayout>

    <View style="@style/Line"/>

    <LinearLayout
        android:id="@+id/ali_check_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginRight="@dimen/_12dp"
            android:src="@drawable/ic_ali_big" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ali_pay"
                android:textSize="@dimen/_16sp"
                android:textColor="@color/black_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ali_pay_long_text"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/gray_text"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ali_check_iv"
            android:layout_width="@dimen/_24dp"
            android:layout_height="@dimen/_24dp"
            android:layout_marginLeft="@dimen/_12dp"
            android:layout_marginRight="@dimen/_12dp"
            android:src="@drawable/selector_pay_check_box"/>
    </LinearLayout>

    <View style="@style/Line"/>

    <TextView
        android:id="@+id/next_tv"
        style="@style/RectButton"
        android:layout_marginLeft="@dimen/_32dp"
        android:layout_marginRight="@dimen/_32dp"
        android:layout_marginTop="@dimen/_32dp"
        android:text="@string/next_step"/>
</LinearLayout>
