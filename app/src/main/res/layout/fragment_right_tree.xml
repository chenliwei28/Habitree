<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_right"
    tools:context="com.habitree.xueshu.mine.fragment.RightTreeFragment">

    <ImageView
        android:id="@+id/tree_one"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="150dp"
        android:src="@drawable/tree_right1"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/tree_two"
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/tree_right2"
        android:visibility="gone"
        tools:visibility="visible"/>

    <ImageView
        android:id="@+id/tree_three"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="270dp"
        android:src="@drawable/tree_right3"
        android:visibility="gone"
        tools:visibility="visible"/>

    <TextView
        android:id="@+id/title_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="260dp"
        android:layout_marginLeft="130dp"
        android:background="@drawable/shape_rect_round_corner_green_bg"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="夜跑啪啪啪啪啪"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/title_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_rect_round_corner_green_bg"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="夜跑啪啪啪啪啪"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/title_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_rect_round_corner_green_bg"
        android:paddingBottom="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="2dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:visibility="gone"
        tools:text="夜跑啪啪啪啪啪"
        tools:visibility="visible" />
</RelativeLayout>
