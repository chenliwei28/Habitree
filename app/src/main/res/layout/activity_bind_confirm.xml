<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.habitree.xueshu.mine.activity.ChangePasswordActivity">

    <View
        style="@style/Line"
        android:layout_marginTop="@dimen/_20dp" />

    <TextView
        android:id="@+id/phone_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_20dp"
        android:text="+86"
        android:textColor="@color/black_text"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/_18sp" />


    <View style="@style/Line" />

    <View
        style="@style/Line"
        android:layout_marginTop="@dimen/_10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_20dp">

        <EditText
            android:id="@+id/authcode_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="验证码"
            android:inputType="number"
            android:maxLength="11"
            android:textColor="@color/black_text"
            android:textColorHint="@color/gray_text"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/_18sp" />

        <TextView
            android:id="@+id/send_tv"
            style="@style/RoundButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_35dp"
            android:layout_marginRight="@dimen/_10dp"
            android:minWidth="@dimen/_80dp"
            android:paddingLeft="@dimen/_15dp"
            android:paddingRight="@dimen/_15dp"
            android:text="@string/auth_code"
            android:textSize="@dimen/_16sp" />
    </LinearLayout>

    <View style="@style/Line" />


    <TextView
        android:id="@+id/confirm_tv"
        style="@style/RoundButton"
        android:layout_marginLeft="@dimen/_32dp"
        android:layout_marginRight="@dimen/_32dp"
        android:layout_marginTop="@dimen/_42dp"
        android:text="@string/confirm" />
</LinearLayout>
