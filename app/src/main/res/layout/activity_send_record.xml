<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.habitree.xueshu.punchcard.activity.SendRecordActivity">

    <TextView
        android:id="@+id/super_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_12dp"
        android:paddingRight="@dimen/_12dp"
        android:text="@string/send_card_record_to_someone"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/_14sp" />

    <EditText
        android:id="@+id/detail_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="start"
        android:minHeight="140dp"
        android:padding="10dp"
        android:textSize="@dimen/_15sp"
        android:textColor="@color/black_text"
        android:hint="少于200字以内"
        android:textCursorDrawable="@null"/>

    <View style="@style/Line"/>

    <TextView
        android:id="@+id/photo_title_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/_12dp"
        android:paddingRight="@dimen/_12dp"
        android:text="@string/photo_record"
        android:textColor="@color/gray_text"
        android:textSize="@dimen/_14sp" />

    <com.habitree.xueshu.xs.view.NoScrollRecyclerView
        android:id="@+id/photo_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        />
</LinearLayout>
