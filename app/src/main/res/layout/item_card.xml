<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="夜跑"
            android:textColor="@color/black_text"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/detail_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:text="@string/detail"
            android:textColor="@color/gray_text"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="第 3/30天"
            android:textColor="@color/black_text"
            android:textSize="15sp" />

        <com.habitree.xueshu.xs.view.RoundImageView
            android:id="@+id/img_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/count_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:src="@drawable/img_yepao"
            app:type="circle"/>

        <TextView
            android:id="@+id/punch_btn"
            android:layout_width="125dp"
            android:layout_height="30dp"
            android:layout_below="@id/img_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_round_corner_orange_stroke_button"
            android:gravity="center"
            android:text="@string/click_to_punch_card"
            android:textColor="@color/orange"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/mark_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/img_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/icon_wenhao"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mark_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="@string/today_has_been_punch_card"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            android:visibility="gone"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>