<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    app:cardCornerRadius="30dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black_text"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="20sp"
            android:lines="1"
            android:ellipsize="end"
            tools:text="画一幅画" />

        <TextView
            android:id="@+id/count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_text"
            android:textSize="16sp"
            tools:text="第 3/30天" />

        <com.habitree.xueshu.xs.view.RoundImageView
            android:id="@+id/img_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_round_tree"
            app:type="circle" />


        <TextView
            android:id="@+id/state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/today_has_been_punch_card_no_check"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/punch_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_round_corner_blue_button"
            android:gravity="center"
            android:minWidth="130dp"
            android:text="@string/click_to_punch_card"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>
</android.support.v7.widget.CardView>