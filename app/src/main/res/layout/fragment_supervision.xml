<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.habitree.xueshu.supervision.fragment.SupervisionFragment">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/white"/>

    <com.habitree.xueshu.xs.view.MyActionBar
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        app:title_text="@string/supervision"
        app:back_btn_visible="false"
        app:line_mode="1"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/super_tl"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/orange"
        app:tabSelectedTextColor="@color/black_text"
        app:tabTextColor="@color/gray_text"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/super_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
