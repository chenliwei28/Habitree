<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    tools:context="com.habitree.xueshu.login.activity.CheckPhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30dp"
            android:layout_marginLeft="@dimen/_40dp"
            android:text="@string/phone_number"
            android:textColor="@color/white"
            android:textSize="@dimen/_22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_40dp"
            android:layout_marginTop="@dimen/_30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textColor="@color/white"
                android:textSize="@dimen/_24sp" />

            <EditText
                android:id="@+id/phone_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/trans"
                android:textSelectHandle="@color/white"
                android:textCursorDrawable="@color/white"
                android:inputType="number"
                android:paddingLeft="@dimen/_10dp"
                android:textColor="@color/white"
                android:textSize="@dimen/_32sp" />
        </LinearLayout>

        <TextView
            style="@style/Line"
            android:layout_marginRight="@dimen/_40dp"
            android:layout_marginLeft="@dimen/_40dp"/>

        <TextView
            android:id="@+id/next_btn"
            style="@style/WhiteRoundButton"
            android:layout_marginRight="@dimen/_40dp"
            android:layout_marginLeft="@dimen/_40dp"
            android:layout_marginTop="@dimen/_60dp"
            android:text="@string/next_step" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/_50dp"
            android:layout_weight="1"
            android:gravity="center|bottom"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_protocol"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />

            <TextView
                android:id="@+id/secret_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/secret_and_service"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
