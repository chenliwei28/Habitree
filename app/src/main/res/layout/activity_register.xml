<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context="com.habitree.xueshu.login.activity.RegisterActivity">

    <com.habitree.xueshu.xs.view.MyActionBar
        android:id="@+id/register_mab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        app:title_text="@string/register_account"
        app:right_btn_text="@string/confirm"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/black_text"
            android:text="@string/phone_head"/>

        <EditText
            android:id="@+id/phone_et"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:hint="@string/please_enter_phone_number"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        style="@style/Line"
        android:background="@color/orange"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="11dp"/>

    <TextView
        android:id="@+id/hint_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:textColor="@color/red_text"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="手机号已注册！"/>
</LinearLayout>
